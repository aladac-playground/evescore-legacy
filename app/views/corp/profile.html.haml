.well
  %p
    = corp_image(@corp.corp_id, 64)
  %p
    %h3
      = @corp.name
  %p
    %b Total Tax
    %br
    = isk @total_tax
  %p
    %b Tax This Month
    %br
    = isk @tax_this_month
  
  %table.table.table-striped.table-condensed
    %thead
      %caption 
        %h4
          Top 10 Tax Contributors
    %tr
      %th Character
      %th Tax Amount
    - @tax_contrib.each do |contrib|
      %tr
        %td
          = character_image_link contrib["_id"]["char_id"], 32
          = character_name_link contrib["_id"]["char_id"]
        %td= isk contrib["sum"] / 100
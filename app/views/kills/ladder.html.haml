= cache(cache_key) do
  %table.table.table-bordered.table-striped
    %thead
      %tr
        %th Pos
        %th{ :colspan => 2 } Character
        %th Bounty
    %tbody
      - @ladder.each do |pos|
        %tr
          %td.span1{ :style => "text-align: center"}
            = pos[:pos]
          %td{ :style => "width: 32px"}= character_image_link(pos["_id"],32)
          %td
            = character_name_link(pos["_id"],50)
          %td#isk
            = isk pos["sum"]/100
  = will_paginate @ladder

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th Pos
      %th{ :colspan => 2 } Character
      %th Bounty
  %tbody
    - @ladder.each do |pos|
      %tr
        %td.span1{ :style => "text-align: center"}
          %h4= pos[:pos]
        %td{ :style => "width: 64px"}= character_image_link(pos["_id"])
        %td
          %h4= character_name_link(pos["_id"],50)
        %td#isk
          %h4= isk pos["sum"]/100
= will_paginate @ladder

= cache(cache_key) do
  - cats = Array.new
  - vals = Array.new
  - @daily.each do |day|
    - cats.push "\'" + build_date(day) + "\'"
    - vals.push day["sum"]/100
  - s_cats = cats.join(",")
  - s_vals = vals.join(",")

  %script
    $(function () {
    $('#chart').highcharts({
    chart: { 
    animation: false },
    plotOptions: {
    series: {
    animation: false
    }
    },
    title: {
    text: 'Daily bounty',
    x: -20 //center
    },
    subtitle: {
    text: 'Last 30 days',
    x: -20
    },
    xAxis: {
    type: 'datetime',
    categories: [ #{s_cats}  ],
    labels: {
    step: 5
    },
    },
    yAxis: {
    endOnTick: true,
    -# type: 'logarithmic',
    labels: {
    x: -20
    },
    title: {
    text: 'Bounty'
    },
    plotLines: [{
    value: 0,
    width: 1,
    color: '#808080'
    }]
    },
    tooltip: {
    valueSuffix: ' ISK'
    },
    legend: {
    enabled: false,
    layout: 'vertical',
    align: 'right',
    verticalAlign: 'middle',
    borderWidth: 0
    },
    series: [{
    name: '#{@character[:name]}',
    data: [ #{s_vals} ]
    }]
    });
    }); 

  %script{ src: "http://code.highcharts.com/highcharts.js" }
  %script{ src: "http://code.highcharts.com/themes/gray.js" }
  -# %script{ src: "http://code.highcharts.com/modules/exporting.js" }

  / .row
  /   #profile_box.span12
  /     .margin20
  .well#profile
    .row
      .span2
        = character_image(@character[:char_id], 64)
        = corp_image_link(@character[:corp_id],64)
      .span3
        %p
          %b
            = character_name(@character[:char_id],50)
          %br
            = corp_name_link(@character[:corp_id],50)
      %table.span6#stats{ :style => "text-align: right; vertical-align: top"}
        %tr
          %td
            %h4 Bounty
          %td
            %h4 Kills
          %td
            %h4 Ticks
          %td
            %h4 IPH
        %tr
          %td.span2
            %b Total
            %br
            = isk total_bounty
            %br
            %b This month
            %br
            = isk bounty_this_month
          %td.span2
            %b Total
            %br
            = total_kills
            %br
            %b This month
            %br
            = kills_this_month
          %td.span2
            %b Top tick
            %br
            = isk top_tick
            %br
            %b Average tick
            %br
            = isk avg_tick
          %td.span2
            %b Max. IPH
            %br
            = isk top_tick * 3
            %br
            %b Avg. IPH
            %br
            = isk avg_tick * 3
    .row
      .span5
        %h4 Badges
        - @character.badges.each do |badge|
          = image_tag "badges/" + badge.icon, { class: "ttp", title: "<h4>#{badge.name}</h4><br>#{badge.text}" }


  / .row
  /   .span12
  /     #chart{ style: "min-width: 400px; height: 267px; margin: 0 auto" }
  / %br
  .row
    = render :partial => 'daily'
    = render :partial => 'top_rats'

  = render :partial => "shared/log"


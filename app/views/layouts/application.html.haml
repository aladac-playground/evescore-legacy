!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title EVE Rat Score (BETA)
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "EVEScore, EVE Online PvE Score-board", :name => "description"}/
    %meta{:content => "chi", :name => "author"}/
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  %body{ :onload => "CCPEVE.requestTrust('http://evescore.com')" }
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          .brand
            = link_to image_tag("evescore.png", { :style => "height: 20px"}), root_path
          .nav-collapse.collapse
            = render 'layouts/navigation'
          .nav.pull-right
            = render 'layouts/search'
    .container
      %p
        %br
        = render 'layouts/messages'
        =yield

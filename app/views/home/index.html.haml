.row
  .span6
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th{ :colspan => 3 } Top 5 - Current Month
      %tbody
        - top_monthly.each do |top|
          %tr
            %td#small_pic
              %img.img-rounded{ :src => character_image(top["_id"]) }
            %td= character_name top["_id"]
            %td#isk= isk top["sum"]
  .span6
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th{ :colspan => 3 } Top 5 - All Time
      %tbody
        - top_bounty.each do |top|
          %tr
            %td#small_pic
              %img.img-rounded{ :src => character_image(top["_id"]) }
            %td= character_name top["_id"]
            %td#isk= isk top["sum"]
